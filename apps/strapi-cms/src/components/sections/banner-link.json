        "images"
      ]
    },
    "ctaButtons": {
      "type": "component",
      "repeatable": true,
      "component": "components.cta-button-simple",
      "max": 2
    },
    "sectionID": {
      "type": "string",
      "regex": "^[a-z]+[a-z\\-]*$"
    },
    "body": {
      "type": "richtext",
      "required": true
    }
  }
}
