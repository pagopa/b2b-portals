{
  "collectionName": "components_sections_banner_links",
  "info": {
    "displayName": "BannerLink"
  },
  "options": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "body": {
      "type": "richtext",
      "required": true
    },
    "reverse": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "ctaButtons": {
      "type": "component",
      "repeatable": true,
      "component": "components.cta-button",
      "max": 2
    },
    "theme": {
      "type": "enumeration",
      "enum": [
        "light",
        "dark"
      ],
      "default": "light",
      "required": true
    },
    "decoration": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": false
    }
  }
}
