    },
    "sectionID": {
      "type": "string",
      "regex": "^[a-z]+[a-z\\-]*$"
    },
    "body": {
      "type": "richtext"
    },
    "titleTag": {
      "type": "enumeration",
      "enum": [
        "h1",
        "h2"
      ],
      "default": "h2"
    }
  }
