{
  "collectionName": "components_sections_how_tos",
  "info": {
    "displayName": "HowTo",
    "description": ""
  },
  "options": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "theme": {
      "type": "enumeration",
      "enum": [
        "light",
        "dark"
      ],
      "default": "light",
      "required": true
    },
    "link": {
      "type": "component",
      "repeatable": false,
      "component": "components.link"
    },
    "rowMaxSteps": {
      "type": "integer"
    },
    "stepsAlignment": {
      "type": "enumeration",
      "enum": [
        "center",
        "left",
        "right"
      ],
      "default": "center",
      "required": true
    },
    "steps": {
      "type": "component",
      "repeatable": true,
      "component": "components.step",
      "required": true,
      "min": 2
    },
    "sectionID": {
      "type": "string",
      "regex": "^[a-z]+[a-z\\-]*$",
      "unique": true
    }
  }
}
