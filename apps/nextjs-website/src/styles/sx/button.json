{
  "common": {
    "textTransform": "none",
    "fontFamily": "inherit"
  },
  "text": {
    "light": {
      "fontSize": "0.875rem",
      "padding": "0",
      "lineHeight": "1.25",
      "color": "#17324D",
      "backgroundColor": "transparent",
      "&:hover": {
        "backgroundColor": "transparent",
        "color": "rgba(23, 50, 77, 0.8)"
      }
    },
    "dark": {
      "fontSize": "0.875rem",
      "padding": "0",
      "lineHeight": "1.25",
      "color": "#FFFFFF",
      "backgroundColor": "transparent",
      "&:hover": {
        "backgroundColor": "transparent",
        "color": "rgba(255, 255, 255, 0.8)"
      }
    }
  },
  "contained": {
    "light": {
      "backgroundColor": "#0073E6",
      "color": "#FFFFFF",
      "boxShadow": "none",
      "&:hover": {
        "backgroundColor": "#0062C3",
        "boxShadow": "none"
      }
    },
    "dark": {
      "backgroundColor": "#FFFFFF",
      "color": "#0066CC",
      "boxShadow": "none",
      "&:hover": {
        "backgroundColor": "#FFFFFF",
        "boxShadow": "none"
      }
    }
  },
  "outlined": {
    "light": {
      "borderColor": "#0073E6",
      "borderWidth": "2px",
      "backgroundColor": "transparent",
      "color": "#0073E6",
      "&:hover": {
        "backgroundColor": "transparent"
      }
    },
    "dark": {
      "borderColor": "rgba(255, 255, 255, 0.5)",
      "borderWidth": "2px",
      "backgroundColor": "transparent",
      "color": "#FFFFFF",
      "&:hover": {
        "backgroundColor": "rgba(255, 255, 255, 0.08)",
        "borderColor": "#FFFFFF"
      }
    }
  }
}
